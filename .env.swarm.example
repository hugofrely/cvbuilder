# ===================================
# Docker Swarm Environment Variables
# ===================================
# Copy this file to .env.swarm and fill in the values
# Usage: docker stack deploy -c docker-compose.swarm.yml cvbuilder

# Database
DB_PASSWORD=your_secure_postgres_password

# Django
SECRET_KEY=your_django_secret_key_here
DEBUG=False

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGc...
SUPABASE_SERVICE_KEY=eyJhbGc...
SUPABASE_JWT_SECRET=your-jwt-secret

# Google Cloud Storage
USE_GCS=True
GCS_BUCKET_NAME=cvbuilder-images
GCS_PROJECT_ID=cvbuilder-476609

# IMPORTANT: GCS Credentials as JSON string (NOT a file path)
# To get this value:
# 1. Download your GCS service account key JSON file
# 2. Convert it to a single line: cat credentials.json | jq -c
# 3. Paste the result here (entire JSON on one line, no spaces around =)
GCS_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...@...iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# Stripe
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_SINGLE_CV_PRICE_ID=price_...
STRIPE_LIFETIME_PREMIUM_PRICE_ID=price_...
